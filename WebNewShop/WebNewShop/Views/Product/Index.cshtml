@model IEnumerable<WebNewShop.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<div class="d-flex">
@foreach (var s in Model)
{
    
    <div class="cart">
        <div class="onecart">
            <div>@s.NameProduct</div>
            <div>@s.Price.ToString("c")</div>
            <div>@s.Category</div>
            <div>
                <form asp-controller="Cart"  method="post" asp-action="AddToCart">
                    <div>
                      <input type="hidden" value="@s.ProductId" name="productId"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
        
    </div>
    
}
</div>
@if (ViewBag.Page.Increment)
{
    <a asp-action="Index" asp-route-page="@(ViewBag.Page.PageNumber-1)" class="btn btn-success"><i class="fa-solid fa-minus fa-flip"></i>Decrement</a>
}
@if (ViewBag.Page.Decrement)
{
    <a asp-action="Index" asp-route-page="@(ViewBag.Page.PageNumber+1)" class="btn btn-success"><i class="fa-solid fa-plus fa-flip"></i>Increment</a>
}