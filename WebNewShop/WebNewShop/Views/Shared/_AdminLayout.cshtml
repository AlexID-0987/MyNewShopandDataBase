<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <style>
        .input-validation-error{border-color:red;}
    </style>
</head>
<body>
    <div class="bg-info p-2 row">
        <div class="col">
          <h2>@ViewBag.Title</h2>
        </div>
        <div class="col">
            <a class="btn btn-sm btn-primary"
               asp-action="Logout" asp-controller="Account">Log Out</a>
        </div>
    </div>
    <div>
        <h1 class="text-center" style="color:red;">Admin List <i class="fa-solid fa-lock" style="color: #ee3211;"></i></h1>
    </div>
    <div>
        @if(TempData["message"]!=null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @RenderBody()
     </div>
</body>
</html>
