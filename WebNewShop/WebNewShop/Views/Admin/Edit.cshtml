@model Product
@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<h2 class="text-center">Edit <i class="fa-solid fa-calendar-check"></i> </h2>

<div class="container">
    <form asp-action="Edit" method="post">
        <div>
            <input type="hidden" asp-for="ProductId" />
        </div>
        <div class="form-group">
            <label asp-for="NameProduct">ProductName</label>
            <div><span asp-validation-for="NameProduct" class="text-danger"></span></div>
            <input type="text" asp-for="NameProduct" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <div><span asp-validation-for="Price" class="text-danger"></span></div>
            <input type="text" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Category">Category</label>
            <div><span asp-validation-for="Category" class="text-danger"></span></div>
            <input type="text" asp-for="Category" class="form-control" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>